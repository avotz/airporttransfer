				padding 10px 10px 
				line-height 11px !important
				border-right 1px solid #dbdbdb
				text-align center

				/*&.item-143
					.nav-child
						display none !important
					&:after
						content '' !important*/

				.nav-header
				a
					position relative
					padding 0
					border-radius 0
					margin 0
					color #4a4a4a
					box-shadow none !important
					font 14px/14px  Arial, Helvetica, sans-serif
					text-shadow none
					display inline-block
					background none
					text-transform uppercase
					transition all 0.35s ease
					cursor pointer
					

				&:first-child + li + li + li + li + li + li + li
					margin-right 0
					padding-right 0
					border-right none
				&:hover 
					.nav-header
					a
						color $verde
				/*&:hover .sub-menu
					display block*/

				.nav-child
				.sub-menu 
					position relative
					display none
					width 100% //182px
					left 0 //-22px
					top 10px//43px
					padding 0 0 10px 0px
					list-style none !important
					zoom: 1
					z-index 102
					background #ffffff
					margin 0
					//border-top 4px solid #f5c34c
					//box-shadow 0px 0px 5px rgba(0, 0, 0, .75)
					
					.nav-child
					.sub-menu
						left 0 //205px
						top 10px
						


					li 
						background none
						float none
						margin 0
						padding 0
						border none
						width 100%
						text-align left
						border-bottom 1px solid #ebebeb
						height auto !important
						overflow visible !important
						text-align center

						.nav-header
						a 
							display block
							padding 0
							margin 0
							font 14px/14px  Arial, Helvetica, sans-serif
							color #4a4a4a
							display inline-block
							background none
							text-transform uppercase
							padding 8px 0 7px 0
							transition: all 0.35s ease
							&:hover 
								color $verde
						&.parent
							.nav-header
								color $naranja
						/*&:hover 
							display block*/
			.active
				a 
					color $verde


