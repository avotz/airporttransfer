#slider
	width 100%
	height 30vh
	position relative
	//margin-top 2.2rem
	
	.item 
		background-size cover
		background-repeat no-repeat
		background-position center center
		height 30vh
		
		//position relative
		
	img 
		display block
		width 100%
	.owl-dots
		display none
		text-align center
		position absolute
		left 0
		right 0
		bottom 95px
		z-index 901
		.owl-dot
			display inline-block
			&.active
				span
					background-color white
			span
				width 10px
				height 10px
				margin 5px 7px
				background transparent
				border 2px solid white
				display block
				border-radius: 30px
	
		
	.owl-prev
	.owl-next
		display none
		position absolute
		top 50%
		transform translate(0, -50%)
		font-family: 'av' !important;
		color white
		font-size 3rem
		z-index	902
			
	.owl-prev
		left 1rem
		&:before
			content: "\f104";
			opacity 1
	.owl-next
		right 1rem
		&:before
			content: "\f105";
			opacity 1
	&-link
		position absolute
		bottom 1rem
		left 0
		right 0
		z-index 100
		text-align center
		a 
			background-color transparent
			font-size 2rem
			
